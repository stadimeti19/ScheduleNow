<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.schedulenow.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_AssignmentsFragment"
            app:destination="@id/AssignmentsFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_ToDoFragment"
            app:destination="@id/ToDoFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.schedulenow.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>

    <fragment
        android:id="@+id/AssignmentsFragment"
        android:name="com.example.schedulenow.AssignmentFragment"
        android:label="@string/assignments_fragment_label" >
        <!-- Add any additional fragment configurations here -->
    </fragment>

    <fragment
        android:id="@+id/ToDoFragment"
        android:name="com.example.schedulenow.ToDoFragment"
        android:label="ToDoFragment">
        <!-- Other fragment configurations -->
    </fragment>
</navigation>